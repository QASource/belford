<suite name="Torbert Smoke Test Execution" verbose="10">
		<parameter name="Browsername" value="Iexplore"/>
	<parameter name="Browserversion" value="8"/>
	<parameter name="Platform" value="Platform.XP"/>
	
    <listeners > 
      <listener class-name="org.uncommons.reportng.HTMLReporter" /> 
    </listeners>
	<test name="TC_01_Verify that new user is unable to signup in application without specifing city." preserve-order="true">
		<classes>
		  <class name="com.qa.scripts.saucetest">
			<methods>
				<include name="testSauce"/>
			</methods>
		  </class>
		</classes>
    </test>
	
	<test name="TC_03_Verify that new user is unable to signup in application by providing some existing email address." preserve-order="true">
		<classes>
		  <class name="com.qa.scripts.TC_03_AccountSignupwithExistingEmail">
			<methods>
				<include name="accountSignupwithExistingEmail"/>
			</methods>
		  </class>
		</classes>
	</test>
	<test name="TC_04_Verify that new user is able to sign up with application." preserve-order="true">
		<classes>
			<class name="com.qa.scripts.TC_04_AccountSignup">
				<methods>
					<include name="accountSignup"/>
				</methods>
			</class>
		</classes>
	</test>
	<test name="TC_05_Verify that existing user is able to sign in application." preserve-order="true">
		<classes>
			<class name="com.qa.scripts.TC_05_AccountSignIn">
				<methods>
					<include name="accountSignIn"/>
				</methods>
			</class>
		</classes>
	</test>

</suite>