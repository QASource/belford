package com.qa.scripts;

import org.testng.Assert;
import org.testng.annotations.Test;

import com.qa.Functions.common.CommonUtils;
import com.qa.Functions.webdriver.UIEvents;
import com.qa.ReusableActions.ReusableActions;

public class TC_18_SignInDealPurchase extends SetupScript{
	
	@Test(description="TC_10_Verify that existing user is able to purchase Deal", groups="SmokeTest")	
	public void Dealpurchase() throws Exception

	{

		ReusableActions.accountSignIn(driver, CommonUtils.readIni("TestData.ini", "txt_SingInUserName"), CommonUtils.readIni("TestData.ini", "txt_SingInPassword"));
	    	    	    
	    ReusableActions.buyDeal(driver);
	    //Ensure that checkout has been complete
	    Assert.assertNotNull(UIEvents.waitForElement(driver, CommonUtils.readIni("Repository.ini", "confirmpayment_validation")));
	}

}
