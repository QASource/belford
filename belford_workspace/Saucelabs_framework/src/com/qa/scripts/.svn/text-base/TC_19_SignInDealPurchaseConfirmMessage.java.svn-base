package com.qa.scripts;

import org.testng.Assert;
import org.testng.annotations.Test;

import com.qa.Functions.common.CommonUtils;
import com.qa.Functions.webdriver.UIEvents;
import com.qa.ReusableActions.ReusableActions;

public class TC_19_SignInDealPurchaseConfirmMessage extends SetupScript {
	
	
	@Test(description="TC_11_Verify that confirmation message is displayed after Deal purchase", groups="SmokeTest")	
	public void DealpurchaseMessage() throws Exception

	{

		ReusableActions.accountSignIn(driver, CommonUtils.readIni("TestData.ini", "txt_SingInUserName"), CommonUtils.readIni("TestData.ini", "txt_SingInPassword"));
		
	    ReusableActions.buyDeal(driver);
	    
	    //Ensure that confirmation message is displayed
	    Assert.assertNotNull(UIEvents.waitForElement(driver, CommonUtils.readIni("Repository.ini", "payment_validationmessage")));
	}


}
